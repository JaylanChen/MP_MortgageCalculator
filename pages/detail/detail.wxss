/* pages/detail/detail.wxss */
.container {
  padding: 30rpx;
  justify-content: center;
}
.card {
  width: 100%;
  padding: 50rpx 0;
  border-radius:10rpx;
  border: 5rpx solid #eee;
  margin: 0 auto;
}
.cardItem {
  width: 100%;
  text-align: center;
}
.monthlyPayment {
  padding: 10rpx 0;
  color: #FF5500;
  font-size: 120rpx;
}
.bigNum1 {
  font-size: 100rpx;
}
.bigNum2 {
  font-size: 80rpx;
}
.bigNum3 {
  font-size: 60rpx;
}
.monthlyPayment .unit{
  font-size: 50rpx;
}
.line {
  border-top: 1px dotted #eee;
  height: 0;
  margin: 50rpx 0;
}
.total {
  display: flex;
  padding: 0 5%;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 40rpx;
}
.actions {
  position: fixed;
  bottom: 50rpx;
  width: 86%;
}